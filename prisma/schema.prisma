generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model Reward {
  id          Int     @id @default(autoincrement())
  title       String  
  discount    Float   
  minOrder    Float   
  rewardType  RewardType 
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum RewardType {
  REFERRER
  FRIEND
}
